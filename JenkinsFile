node {
      def mvn = tool (name:'maven-3.6.3',type: 'maven' )+'/bin/mvn'

stage('scm cheakout'){ 
       git 'https://github.com/NeerajDubey333/limit-services.git'
}

stage('Mvn Package'){
	   // Build using maven
	   
	   sh "${mvn} clean package"
   }
   stage('deploy-dev'){
       def tomcatDevIp = '3.89.65.153'
	   def tomcatHome = '/opt/tomcat/'
	   def webApps = tomcatHome+'webapps/'
	   def tomcatStart = "${tomcatHome}bin/startup.sh"
	   def tomcatStop = "${tomcatHome}bin/shutdown.sh"
	   sh "scp -o StrictHostKeyChecking=no target/*.war ec2-user@${tomcatDevIp}:/home/ec2-user/myweb.war"
	   sh "ssh ec2-user@${tomcatDevIp} ${tomcatStop}"
           sh "ssh ec2-user@${tomcatDevIp} ${tomcatStart}"
   }

}
